<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MedsConnect.ViewModels"
             xmlns:models="clr-namespace:MedsConnect.Models"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="MedsConnect.Views.DashboardPage"
             x:DataType="viewmodels:DashboardViewModel"
             Title="Dashboard">

    <Grid RowDefinitions="Auto,*" Padding="0">

        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="{StaticResource Primary}" Padding="20" CornerRadius="0" HasShadow="False">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="{Binding WelcomeMessage}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{0:MMMM dd, yyyy}'}"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>

                <Button Grid.Column="1"
                        Text="Sign Out"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        CornerRadius="8"
                        Padding="15,5"
                        VerticalOptions="Center"/>
            </Grid>
        </Frame>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                    <Frame Grid.Row="0" Grid.Column="0" Padding="15" CornerRadius="10" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding TotalMedications}" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                            <Label Text="Total Today" FontSize="12" Opacity="0.7"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="0" Grid.Column="1" Padding="15" CornerRadius="10" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding TakenCount}" FontSize="32" FontAttributes="Bold" TextColor="Green"/>
                            <Label Text="Taken" FontSize="12" Opacity="0.7"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="0" Padding="15" CornerRadius="10" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding PendingCount}" FontSize="32" FontAttributes="Bold" TextColor="Orange"/>
                            <Label Text="Pending" FontSize="12" Opacity="0.7"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1" Padding="15" CornerRadius="10" HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding AdherencePercentage, StringFormat='{0:F0}%'}" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                            <Label Text="Adherence" FontSize="12" Opacity="0.7"/>
                        </VerticalStackLayout>
                    </Frame>

                </Grid>

                <!-- Quick Actions -->
                <Label Text="Quick Actions" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0" Text="Medications" Command="{Binding GoToMedicationsCommand}"
                            BackgroundColor="{StaticResource Primary}" CornerRadius="10"/>
                    <Button Grid.Column="1" Text="History" Command="{Binding GoToHistoryCommand}"
                            BackgroundColor="{StaticResource Secondary}" CornerRadius="10"/>
                </Grid>

                <Button Text="Caregivers" Command="{Binding GoToCaregiversCommand}"
                        BackgroundColor="{StaticResource Tertiary}" CornerRadius="10"/>

                <!-- Today's Medications -->
                <Label Text="Today's Medications" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>

                <RefreshView Command="{Binding LoadDataCommand}" IsRefreshing="{Binding IsBusy}">
                    <CollectionView ItemsSource="{Binding TodaysLogs}" EmptyView="No medications scheduled for today.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:MedicationLog">
                                <Frame Padding="15" Margin="0,5" CornerRadius="10" HasShadow="True">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">

                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Medication.Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>

                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding Medication.Dosage, StringFormat='{0} {1}'}"
                                               FontSize="14"
                                               Opacity="0.7"/>

                                        <Label Grid.Row="2" Grid.Column="0"
                                               Text="{Binding ScheduledDateTime, StringFormat='Scheduled: {0:h:mm tt}'}"
                                               FontSize="12"
                                               Opacity="0.6"/>

                                        <VerticalStackLayout Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Spacing="8" VerticalOptions="Center">
                                            <!-- Taken Button -->
                                            <Button Text="✓ Taken"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DashboardViewModel}}, Path=MarkAsTakenCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="Green"
                                                    TextColor="White"
                                                    WidthRequest="90"
                                                    HeightRequest="35"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    Padding="5,0"/>

                                            <!-- Missed Button -->
                                            <Button Text="✗ Missed"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DashboardViewModel}}, Path=MarkAsMissedCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="Red"
                                                    TextColor="White"
                                                    WidthRequest="90"
                                                    HeightRequest="35"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    Padding="5,0"/>

                                            <!-- Status Label (shown after marking) -->
                                            <Label Text="{Binding Status}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   TextColor="{Binding Status, Converter={StaticResource MedicationStatusToColorConverter}}"/>
                                        </VerticalStackLayout>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
