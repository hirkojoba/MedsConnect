<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MedsConnect"
             xmlns:converters="clr-namespace:MedsConnect.Converters"
             x:Class="MedsConnect.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:MedicationStatusToColorConverter x:Key="MedicationStatusToColorConverter" />
            <converters:MedicationStatusToPendingConverter x:Key="MedicationStatusToPendingConverter" />
            <converters:MedicationStatusToNotPendingConverter x:Key="MedicationStatusToNotPendingConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
            <converters:TimeSpanListToStringConverter x:Key="TimeSpanListToStringConverter" />
            <converters:BoolToActiveStatusConverter x:Key="BoolToActiveStatusConverter" />
            <converters:BoolToActiveColorConverter x:Key="BoolToActiveColorConverter" />
            <converters:BoolToFilterTextConverter x:Key="BoolToFilterTextConverter" />
            <converters:BoolToAddCaregiverTextConverter x:Key="BoolToAddCaregiverTextConverter" />
            <converters:IntToBoolConverter x:Key="IntToBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
